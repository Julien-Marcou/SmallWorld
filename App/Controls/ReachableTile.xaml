<Button x:Class="SmallWorld.Controls.ReachableTile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SmallWorld.Controls" 
        mc:Ignorable="d" 
        d:DesignHeight="156" d:DesignWidth="136"
        x:Name="CurrentTile">

    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Grid>

                <Polygon Style="{StaticResource BaseTile}"/>
                
                <Polygon Style="{StaticResource ReachableTile}"/>
                
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

            </Grid>
        </ControlTemplate>
    </Button.Template>

</Button>

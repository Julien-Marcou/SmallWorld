            <Setter.Value>
                <ImageBrush Viewbox="0 156 136 156" ImageSource="/Resources/Images/Terrains.png" Stretch="None" ViewboxUnits="Absolute"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PlainTile0" TargetType="Polygon" BasedOn="{StaticResource BaseTile}">

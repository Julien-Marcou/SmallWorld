            <Setter.Value>
                <ImageBrush Viewbox="408 0 136 156" ImageSource="/Resources/Images/Terrains.png" Stretch="None" ViewboxUnits="Absolute"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MountainTile1" TargetType="Polygon" BasedOn="{StaticResource BaseTile}">
